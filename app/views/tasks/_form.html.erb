
  <%= form_for @task do |f| %>
  <%= f.label :title, "Title" %>
  <br>
  <%= f.text_field :title %>
<br>
<br>
  <%= f.label :details, "Details" %>
  <br>
  <%= f.text_field :details %>
<br>
<br>
  <% if params[:action] == 'edit' %>
    <%= f.check_box :completed %>
    <%= f.label :completed, "Mark task a complete"%>
  <% end %>
  <br>
  <br>
  <%= f.submit %>
  <% end %>


